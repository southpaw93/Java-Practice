<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
     http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd ">
    <display-name>Food Ordering Web Project</display-name>
	<welcome-file-list>
  		<welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
	<servlet>
		<servlet-name>AddOrder</servlet-name>
		<servlet-class>com.fdmgroup.servlets.AddOrder</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddOrder</servlet-name>
		<url-pattern>/AddOrder</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AdminLogin</servlet-name>
		<servlet-class>com.fdmgroup.servlets.AdminLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminLogin</servlet-name>
		<url-pattern>/AdminLogin</url-pattern>
	</servlet-mapping>
  	<servlet>
		<servlet-name>ViewOrder</servlet-name>
		<servlet-class>com.fdmgroup.servlets.ViewOrder</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewOrder</servlet-name>
		<url-pattern>/ViewOrder</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UpdateOrder</servlet-name>
		<servlet-class>com.fdmgroup.servlets.UpdateOrder</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateOrder</servlet-name>
		<url-pattern>/UpdateOrder</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LogOut</servlet-name>
		<servlet-class>com.fdmgroup.servlets.LogOut</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogOut</servlet-name>
		<url-pattern>/LogOut</url-pattern>
	</servlet-mapping>
	
	<listener>
		<listener-class>com.fdmgroup.listeners.JPAListener</listener-class>
	</listener>



</web-app>
